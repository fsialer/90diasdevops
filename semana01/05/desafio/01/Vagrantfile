Vagrant.configure("2") do |config|
  # Usa una imagen ligera de Ubuntu 22.04
  config.vm.box = "ubuntu/jammy64"

  # Configuraci√≥n de red (accesible via IP)
  config.vm.network "private_network", ip: "192.168.14.10"

  # Provisionamiento con Shell
  config.vm.provision "desplegar", type: "shell", path: "./scripts/desplegar_app_node.sh"
end
