FROM python:3.12-slim

WORKDIR /app

# Copiar solo lo necesario primero para aprovechar cacheo
RUN 
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copiar solo después el resto del código
COPY . .

# Crear y usar usuario no root
RUN useradd -m appuser
USER appuser

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s \
  CMD curl -f http://localhost:8000/ || exit 1

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]